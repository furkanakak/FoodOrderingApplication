<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/avatarSelectTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="24dp"
            android:text="@string/choose_avatar"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarSelectTextView">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/avatarRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/avatarRadioButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp">

                    </RadioButton>

                    <RadioButton
                        android:id="@+id/avatarRadioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp" />

                    <RadioButton
                        android:id="@+id/avatarRadioButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp" />

                    <RadioButton
                        android:id="@+id/avatarRadioButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp" />

                    <RadioButton
                        android:id="@+id/avatarRadioButton5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp" />

                    <RadioButton
                        android:id="@+id/avatarRadioButton6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp" />

                    <RadioButton
                        android:id="@+id/avatarRadioButton7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp" />

                    <RadioButton
                        android:id="@+id/avatarRadioButton8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp" />

                    <RadioButton
                        android:id="@+id/avatarRadioButton9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp" />

                </RadioGroup>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="80dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/avatarImageView1"
                        android:layout_width="69dp"
                        android:layout_height="73dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@mipmap/avatar_1_foreground" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/avatarImageView2"
                        android:layout_width="69dp"
                        android:layout_height="73dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@mipmap/avatar_2_foreground" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/avatarImageView3"
                        android:layout_width="69dp"
                        android:layout_height="73dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@mipmap/avatar_3_foreground" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/avatarImageView4"
                        android:layout_width="69dp"
                        android:layout_height="73dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@mipmap/avatar_4_foreground"
                        tools:layout_editor_absoluteX="80dp"
                        tools:layout_editor_absoluteY="164dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/avatarImageView5"
                        android:layout_width="69dp"
                        android:layout_height="73dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@mipmap/avatar_5_foreground" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/avatarImageView6"
                        android:layout_width="69dp"
                        android:layout_height="73dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@mipmap/avatar_6_foreground"
                        tools:layout_editor_absoluteX="289dp"
                        tools:layout_editor_absoluteY="164dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/avatarImageView7"
                        android:layout_width="69dp"
                        android:layout_height="73dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@mipmap/avatar_7_foreground" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageView8"
                        android:layout_width="69dp"
                        android:layout_height="73dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@mipmap/avatar_8_foreground" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageView9"
                        android:layout_width="69dp"
                        android:layout_height="73dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@mipmap/avatar_9_foreground" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>